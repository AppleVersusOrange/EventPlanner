<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvEventTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        tools:text="music fest" />

    <TextView
        android:id="@+id/tvEventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEventTitle"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        tools:text="10/5/22" />

    <TextView
        android:id="@+id/tvGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEventTitle"
        android:layout_marginStart="7dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/tvEventDate"
        tools:text="Genre: sports" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvGenre"
        android:layout_marginStart="-143dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/tvGenre"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:text="user goes here" />


</RelativeLayout>