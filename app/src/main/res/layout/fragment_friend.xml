<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundPrimary"
    tools:context=".fragments.FriendFragment">


    <Button
        android:id="@+id/btnRemoveFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFriendUser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/button2"
        android:text="Remove Friend"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvFriendUser"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/ivFriendPicture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Username"
        android:textColor="@color/textPrimary"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivFriendPicture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnAddFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFriendUser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/button2"
        android:text="Add Friend" />

    <TextView
        android:id="@+id/tvUpcoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAddFriend"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Username's Upcoming Events"
        android:textColor="@color/textPrimary"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFriendEvents"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_below="@+id/tvUpcoming"
        android:layout_marginTop="30dp" />

</RelativeLayout>